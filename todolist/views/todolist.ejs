<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ma Todo List</title>
</head>

<body>
    <h1>Bienvenue sur la Todo List</h1>

    <form method="POST" action="/task">
        <input type="text" name="task" placeholder="Nouvelle tâche" autofocus required>
        <button type="submit">Ajouter</button>
    </form>

    <h3>Mes tâches</h3>
    <ul>
        <% tasks.forEach((task, idx) => { %>
            <li>
                <% if (task.done) { %>
                    <s><%= task.title %></s> 
                    | <a href="/task/<%= idx %>/delete">Supprimer</a>
                <% } else { %>
                    <%= task.title %> 
                    | <a href="/task/<%= idx %>/done">Terminer</a>
                <% } %>
            </li>
        <% });%>
    </ul>


</body>
</html>

